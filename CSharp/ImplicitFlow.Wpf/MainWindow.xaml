<Window 
    x:Class="ImplicitFlow.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MainWindow" 
    Height="450" 
    Width="525">
    <Grid
        Margin="16,16,16,16">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox
            x:Name="_listBox">
        </ListBox>
        <StackPanel
            Grid.Row="1"
            Margin="0,16,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="24"
                HorizontalAlignment="Right"
                Content="Show your Claims"
                Click="OnDisplayClaimsClick"
                Margin="0,0,8,0" />
            <Button
                Width="80"
                Height="24"
                HorizontalAlignment="Right"
                Content="Login"
                Click="OnLoginClick" />
        </StackPanel>
    </Grid>
</Window>
